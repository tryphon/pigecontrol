<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="fr">
  <head>
    <title>Pige - <%= title %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link href="/stylesheets/reset.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/tryphon.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/application.css" media="screen" rel="stylesheet" type="text/css" />
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %>">
    <ul id="access">
      <li><a href="#content">Aller au contenu</a></li>
      <li><a href="#sidebar">Aller au menu</a></li>
    </ul>
    <hr/>
    <div id="header">
      <div>
        <ul id="menu">
          <li><%= link_to t(".dashboard"), source_chunks_path(Source.default) %></li>
          <li><a href="#"><%= t(".help") %></a></li>
        </ul>
      </div>
    </div>
    <hr/>
    <div id="frame">
      <%= flash_tag(flash) %>

      <div id="content">
        <%= yield %>
      </div>
      <hr/>
      <div id="sidebar">
        <h2>PigeBox<sup>beta</sup></h2>

        <ul>
          <li><%= link_to t(".chunks.index"), source_chunks_path(Source.default) %></li>
          <li><%= link_to t("chunks.actions.create"), new_source_chunk_path(Source.default) %></li>
        </ul>

        <ul>
          <li><%= link_to t(".labels.index"), source_labels_path(Source.default) %></li>
          <li><%= link_to t(".labels.new"), new_source_label_path(Source.default) %></li>
        </ul>

        <ul>
          <li><%= link_to Input.human_name, input_path %></li>
          <li><%= link_to Network.human_name, network_path %></li>
          <li><%= link_to SavePoint.human_name, new_save_point_path %></li>
          <li><%= link_to Release.human_name, releases_path %></li>
        </ul>
        <h2><%= LabelSelection.human_name %></h2>

        <%= render user_session.label_selection %>

        <h2><%= t(".information.title") %></h2>
        <%= site_information_tag %>
        <p>
          <%= t(".information.text") %>
        </p>

        <p class="languages">
          <%= links_to_languages %>
        </p>
      </div>
    </div>
    <hr/>
    <div id="footer">
      <div>
        &nbsp;
      </div>
    </div>
    <%= javascript_include_tag :defaults %>
    <%= user_voice_feedback %>
  </body>
</html>
